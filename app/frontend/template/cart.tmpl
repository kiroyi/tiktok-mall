{{ define "cart" }}
    {{ template "header" . }}
    <div class="row">
        <ul class="list-group">
            {{ range $.items }}
                <li class="list-group-item">
                    <div class="card border-0">
                        <div class="card-body row">
                            <div class="col-4">
                                <img src="{{ .Picture }}" style="max-width: 100px;max-height: 50px" alt="">
                            </div>
                            <div class="col-8">
                                <div class="mt-1">{{ .Name }}</div>
                                <div class="mt-1">Single Price: ${{ .Price }}</div>
                                <div class="mt-1">Qty: {{ .Qty }}</div>
                            </div>
                        </div>
                    </div>
                </li>
            {{ end}}
        </ul>
        {{ if $.items }}
            <div class="mt-3 mb-5">
                <div class="float-end">
                    <div class="m-3 text-danger">Total: ${{ .total }}</div>
                    <a href="/checkout" class="btn btn-lg btn-success float-end">Check out</a>
                </div>
            </div>
        {{else}}
            <div class="row justify-content-center">
                <img class="text-center mb-3" src="https://gw.alicdn.com/imgextra/i1/O1CN010vvC0t1FDylfCLcih_!!6000000000454-2-tps-180-180.png" style="max-width: 150px;">
                <h4 class="text-center mb-3">暂无商品</h2>
                <h5 class="text-center mb-3" style="color: #777;">挑选38节好物，装购物车吧</h3>
                <a href="/" class="btn btn-danger" style="width: 100px; text-align: center;">去购物</a>
            </div>
        {{ end }}
    </div>
    {{ template "footer" . }}

{{ end }}